{
  "name": "@open-election-compass/client",
  "version": "1.0.0-beta.13",
  "author": "Till Sanders <mail@till-sanders.de>",
  "license": "GPL-3.0",
  "main": "dist/lib/open-election-compass.umd.min.js",
  "files": [
    "/dist/lib",
    "/dist/nuxt",
    "LICENSE",
    "README.md"
  ],
  "bugs": {
    "url": "https://github.com/open-election-compass/client/issues"
  },
  "homepage": "https://open-election-compass.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/open-election-compass/client.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "npm run serve",
    "serve": "vue-cli-service serve",
    "build": "npm run build:demo && npm run build:lib && npm run build:nuxt",
    "build:demo": "vue-cli-service build --target app --inline-vue --name open-election-compass --dest dist/demo",
    "build:lib": "npx vue-cli-service build --target lib --inline-vue --name open-election-compass --dest dist/lib ./src/main.js && unlink dist/lib/demo.html",
    "build:nuxt": "EXTRACT_CSS=true npx vue-cli-service build --target lib --name open-election-compass --dest dist/nuxt ./src/nuxtPlugin.js --formats umd-min && cp src/nuxtModule.js dist/nuxt/",
    "test": "npm run test:unit",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e",
    "lint": "vue-cli-service lint",
    "lint:style": "stylelint **/*.{css,scss,vue}",
    "prerelease": "npm run build:lib",
    "release": "np"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/vue-fontawesome": "^2.0.6",
    "@open-election-compass/ui": "^0.12.0",
    "@wordpress/dom-ready": "^2.13.2",
    "core-js": "^3.19.1",
    "cross-fetch": "^3.1.4",
    "get-user-locale": "^1.4.0",
    "ie11-custom-properties": "^4.1.0",
    "lodash": "^4.17.21",
    "nanoid": "^3.1.30",
    "normalize.css": "^8.0.1",
    "peerjs": "^1.3.2",
    "smoothscroll-polyfill": "^0.4.4",
    "v-scroll-lock": "^1.2.0",
    "vee-validate": "^3.4.14",
    "vue": "^2.6.14",
    "vue-i18n": "^8.26.7",
    "vue-router": "^3.5.3",
    "vue-tippy": "^4.13.0",
    "vuex": "^3.6.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@intlify/vue-i18n-loader": "^4.0.1",
    "@vue/cli-plugin-babel": "^4.5.15",
    "@vue/cli-plugin-e2e-cypress": "^4.5.15",
    "@vue/cli-plugin-eslint": "^4.5.15",
    "@vue/cli-plugin-router": "^4.5.15",
    "@vue/cli-plugin-unit-jest": "^4.5.15",
    "@vue/cli-service": "^4.5.15",
    "@vue/eslint-config-airbnb": "^5.3.0",
    "@vue/test-utils": "^1.3.0",
    "babel-eslint": "^10.1.0",
    "deepmerge": "^4.2.2",
    "eslint": "^7.32.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^7.0.4",
    "node-sass": "^4.14.1",
    "np": "^7.6.0",
    "postcss": "^8.4.4",
    "postcss-html": "^1.3.0",
    "sass-loader": "^8.0.2",
    "stylelint": "^14.1.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-recommended-vue": "^1.1.0",
    "vue-cli-plugin-i18n": "^2.3.1",
    "vue-cli-plugin-yaml": "^1.0.2",
    "vue-template-compiler": "^2.6.14"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
